<?xml version="1.0" encoding="utf-8"?>
<com.cjj.MaterialRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/linear_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_eeeeee"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="@color/grey_eeeeee"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/check_head_photo"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginTop="15px"
                android:src="@mipmap/touxaing" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34px"
                    android:text="@string/active_day"
                    android:textColor="@color/black_444444"
                    android:textSize="12px" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="146px"
                    android:layout_height="9px"
                    android:layout_gravity="center"
                    android:layout_marginLeft="13px"
                    android:layout_marginRight="13px"
                    android:max="100"
                    android:progress="60"
                    android:progressDrawable="@drawable/progressbar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_34px"
                    android:text="@string/rate"
                    android:textColor="@color/black_444444"
                    android:textSize="12px" />


            </com.zhy.autolayout.AutoLinearLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stepbyweek"
                    android:textColor="@color/black_444444"
                    android:textSize="12px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53px"
                    android:text="@string/stepbyweek"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />


            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:background="@color/grey_eeeeee"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_day"
                    android:layout_width="33px"
                    android:layout_height="33px"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="30px"
                    android:background="@mipmap/zuijiari" />

                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_day"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="5px"
                    android:text="@string/best_day"
                    android:textColor="@color/black_444444"
                    android:textSize="@dimen/dimen_12px" />

                <TextView
                    android:id="@+id/tv_best_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_day"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="1px"
                    android:text="--"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />

                <TextView
                    android:id="@+id/tv_best_day_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34px"
                    android:layout_marginTop="33px"
                    android:layout_toRightOf="@id/iv_day"
                    android:text="--"
                    android:textColor="@color/black_444444"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="43px"
                    android:layout_toRightOf="@id/tv_best_day_step"
                    android:text="步"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />


            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_week"
                    android:layout_width="33px"
                    android:layout_height="33px"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="30px"
                    android:background="@mipmap/zuijiazhou" />

                <TextView
                    android:id="@+id/tv_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_week"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="5px"
                    android:text="@string/best_week"
                    android:textColor="@color/black_444444"
                    android:textSize="@dimen/dimen_12px" />

                <TextView
                    android:id="@+id/tv_best_week_begin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_week"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="1px"
                    android:text="--"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />

                <TextView
                    android:id="@+id/tv_best_week_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_best_week_begin"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="1px"
                    android:text="--"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />

                <TextView
                    android:id="@+id/tv_bestweek_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34px"
                    android:layout_marginTop="33px"
                    android:layout_toRightOf="@id/iv_week"
                    android:text="--"
                    android:textColor="@color/black_444444"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="43px"
                    android:layout_toRightOf="@id/tv_bestweek_step"
                    android:text="步"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />


            </com.zhy.autolayout.AutoRelativeLayout>


        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:layout_marginTop="1px"
            android:background="@color/grey_eeeeee"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_month"
                    android:layout_width="33px"
                    android:layout_height="33px"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="30px"
                    android:background="@mipmap/zuijiayue" />

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_month"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="5px"
                    android:text="@string/best_month"
                    android:textColor="@color/black_444444"
                    android:textSize="@dimen/dimen_12px" />

                <TextView
                    android:id="@+id/tv_best_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_month"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="1px"
                    android:text="--"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />

                <TextView
                    android:id="@+id/tv_best_month_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34px"
                    android:layout_marginTop="33px"
                    android:layout_toRightOf="@id/iv_month"
                    android:text="--"
                    android:textColor="@color/black_444444"
                    android:textSize="24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="43px"
                    android:layout_toRightOf="@id/tv_best_month_step"
                    android:text="步"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />


            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1px"
                android:layout_weight="1"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_goin"
                    android:layout_width="33px"
                    android:layout_height="33px"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="30px"
                    android:background="@mipmap/dabiaolv" />

                <TextView
                    android:id="@+id/tv_goin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_goin"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="5px"
                    android:text="连续达标率"
                    android:textColor="@color/black_444444"
                    android:textSize="@dimen/dimen_12px" />

                <TextView
                    android:id="@+id/tv_rate_begin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_goin"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="1px"
                    android:text="--"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />

                <TextView
                    android:id="@+id/tv_rate_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_rate_begin"
                    android:layout_marginLeft="31px"
                    android:layout_marginTop="1px"
                    android:text="--"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />

                <TextView
                    android:id="@+id/tv_weekbygoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="34px"
                    android:layout_marginTop="33px"
                    android:layout_toRightOf="@id/iv_goin"
                    android:text="--"
                    android:textColor="@color/black_444444"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_rate_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:layout_marginTop="43px"
                    android:layout_toRightOf="@id/tv_weekbygoin"
                    android:text="天"
                    android:textColor="@color/black_444444"
                    android:textSize="9px" />


            </com.zhy.autolayout.AutoRelativeLayout>


        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_bind_account"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="@dimen/dimen_16px"
            android:background="@drawable/menu_item_selector"
            android:drawableRight="@mipmap/qj"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:text="@string/bind_account"
            android:textColor="@color/black_444444"
            android:textSize="14px" />

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="40px"
            android:layout_marginTop="1px"
            android:background="@drawable/menu_item_selector"
            android:drawableRight="@mipmap/qj"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:text="@string/exit_account"
            android:textColor="@color/black_444444"
            android:textSize="14px" />


    </com.zhy.autolayout.AutoLinearLayout>
</com.cjj.MaterialRefreshLayout>
