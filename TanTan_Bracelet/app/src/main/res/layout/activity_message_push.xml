<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message_push"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_eeeeee">

    <include
        android:id="@+id/message_push_titlebar"
        layout="@layout/include_title" />

    <TextView
        android:id="@+id/message_push_top_textview"
        android:layout_width="match_parent"
        android:layout_below="@id/message_push_titlebar"
        android:gravity="center_vertical"
        android:text="@string/ep_msg_push_top"
        android:textSize="14px"
        android:background="@color/grey_eeeeee"
        android:paddingLeft="23px"
        android:textColor="@color/darkgray"
        android:layout_height="30px" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/message_push_top_textview"
        android:id="@+id/ep_messagepush_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</com.zhy.autolayout.AutoRelativeLayout>
