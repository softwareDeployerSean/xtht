<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <com.walnutin.xtht.bracelet.ProductList.fragment.TopTitleLableView
        android:id="@id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:background="@color/green"
        app:lableText="@string/equipment">

    </com.walnutin.xtht.bracelet.ProductList.fragment.TopTitleLableView>


    <com.walnutin.xtht.bracelet.ProductList.fragment.UIActivityIndicatorView
        android:id="@+id/uiIndicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topTitle"
        android:visibility="visible">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#e5e5e5"
            android:dividerHeight="1dp"></ListView>


    </RelativeLayout>


</RelativeLayout>