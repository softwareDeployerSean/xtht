<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="1px"
    android:background="@color/white"
    android:id="@+id/message_push_item_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/message_push_item_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23px"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        app:srcCompat="@mipmap/afacebook" />

    <TextView
        android:id="@+id/message_push_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_toRightOf="@id/message_push_item_imageview"
        android:textSize="18px"
        android:layout_weight="1"
        android:text="TextView" />

    <com.walnutin.xtht.bracelet.mvp.ui.widget.SwitchView
        android:id="@+id/message_push_item_switchview"
        android:layout_width="55px"
        android:layout_height="35px"
        android:layout_marginTop="8px"
        android:layout_marginBottom="8px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15px"
        android:layout_weight="1" />
</com.zhy.autolayout.AutoRelativeLayout>
